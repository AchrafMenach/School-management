{
  "name": "school-management-server",
  "version": "1.0.0",
  "description": "Backend pour l'application de gestion scolaire",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "client": "cd ../client && npm start",
    "server": "nodemon server.js",
    "dev:both": "concurrently \"npm run server\" \"npm run client\"",
    "build": "cd ../client && npm run build",
    "db:reset": "node scripts/resetDb.js",
    "db:backup": "node scripts/backup.js"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "sqlite3": "^5.1.7"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "nodemon": "^3.0.2"
  }
}
